    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f5f5f5;
            margin: 0;
            padding: 0;
            color: #333;
        }

        header {
            background-color: #3498db;
            color: #fff;
            padding: 20px;
            text-align: center;
        }

        .content {
            max-width: 800px;
            margin: 20px auto;
            padding: 30px;
            background-color: #fff;
            border-radius: 15px;
            box-shadow: 0 8px 20px rgba(12, 8, 8, 0.1);
            text-align: center;
        }

        h1 {
            font-size: 36px;
            color: #333;
            margin-bottom: 20px;
        }

        p {
            font-size: 18px;
            color: #070505;
            margin-bottom: 30px;
        }

        .bug-container {
            margin-top: 40px;
            text-align: left;
        }

        .bug {
            margin-bottom: 40px;
        }

        .bug-title {
            font-size: 24px;
            color: #3498db;
            margin-bottom: 10px;
        }

        .bug-description {
            color: #555;
            margin-bottom: 15px;
        }

        .bug-images {
            display: flex;
            justify-content: space-between;
            margin-top: 15px;
        }

        .bug-image {
            width: 48%;
            max-height: 555px;
            border-radius: 15px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            object-fit: cover;
        }
    </style>
</head>
<%- include('partials/preloader') %>

