<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Suggestion/Feedback!</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            background: linear-gradient(to right, #64b5f6, #1976d2);
            color: #fff;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        .container {
            width: 90%;
            max-width: 400px;
            padding: 20px;
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
            text-align: center;
        }

        h1 {
            margin-bottom: 20px;
            color: #000;
        }

        label {
            display: block;
            margin-bottom: 10px;
            color: #000;
            font-size: 16px;
            font-weight: bold;
            text-align: left;
        }

        input[type="text"],
        textarea {
            width: calc(100% - 20px);
            height: 40px;
            resize: none;
            margin-bottom: 20px;
            border-radius: 5px;
            border: 1px solid #ccc;
            padding: 10px;
            font-size: 16px;
            color: #333;
        }

        textarea#description {
            height: 120px;
        }

        .char-count {
            text-align: right;
            font-size: 12px;
            margin-bottom: 10px;
        }

        .char-count.default {
            color: #666;
        }

        .char-count.orange {
            color: orange;
        }

        .char-count.red {
            color: red;
        }

        button {
            background-color: #4CAF50;
            color: white;
            padding: 12px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            width: calc(100% - 20px);
            font-size: 16px;
        }

        button:hover {
            background-color: #45a049;
        }

        .description {
            font-size: 14px;
            margin-bottom: 30px;
            color: #333;
            text-align: justify;
            line-height: 1.5;
        }

        p.notice {
            font-size: 12px;
            color: #555;
            margin-top: 10px;
        }

        @media screen and (max-width: 600px) {
            .container {
                width: 90%;
                padding: 10px;
            }

            h1 {
                font-size: 1.3rem;
            }

            label {
                font-size: 0.9rem;
            }

            input[type="text"],
            textarea {
                height: 35px;
                font-size: 0.9rem;
            }

            textarea#description {
                height: 100px;
            }

            .char-count {
                font-size: 0.7rem;
            }

            button {
                padding: 10px 15px;
                font-size: 0.9rem;
            }

            .description {
                font-size: 0.8rem;
                margin-bottom: 15px;
            }

            p.notice {
                font-size: 0.7rem;
            }
        }

        .back-button {
            background-color: #1976d2;
            color: white;
            padding: 12px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            width: calc(100% - 20px);
            font-size: 16px;
            margin-top: 20px;
        }

        .back-button:hover {
            background-color: #1565c0;
        }

    </style>
</head>
<%- include('../partials/preloader') %>

<body>
<div class="container">
    <h1>Suggestion/Feedback!</h1>
    <p class="description">We value your opinion and are committed to improving our services. Please take a moment to share your feedback or suggestions with us.</p>
    <form id="feedbackForm">
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" required>
        <label for="description">Description (max 250 characters):</label>
        <textarea id="description" name="description" maxlength="250" required></textarea>
        <input type="hidden" id="userId" name="userId" value="USER_ID">
        <input type="hidden" id="username" name="username" value="USERNAME">
        <div class="char-count default" id="charCount">0/250</div>
        <button type="submit">Submit Feedback</button>
        <p class="notice">Note: We may respond to your feedback. We collect your Discord ID and username for this purpose.</p>
        <button onclick="window.location.href = '/home';" class="back-button">Back home</button>
    </form>
</div>

<script>
    const descriptionInput = document.getElementById('description');
    const charCount = document.getElementById('charCount');

    descriptionInput.addEventListener('input', function() {
        const currentLength = this.value.length;
        charCount.textContent = `${currentLength}/250`;

        if (currentLength > 200 && currentLength < 250) {
            charCount.style.color = 'orange';
        } else if (currentLength >= 250) {
            charCount.style.color = 'red';
        } else {
            charCount.style.color = '#666';
        }
    });
</script>
<script>
    const descriptionInput = document.getElementById('description');
    const charCount = document.getElementById('charCount');
    const feedbackForm = document.getElementById('feedbackForm');

    descriptionInput.addEventListener('input', function() {
        const currentLength = this.value.length;
        charCount.textContent = `${currentLength}/250`;

        if (currentLength > 200 && currentLength < 250) {
            charCount.style.color = 'orange';
        } else if (currentLength >= 250) {
            charCount.style.color = 'red';
        } else {
            charCount.style.color = '#666';
        }
    });
</script>
<script>
    feedbackForm.addEventListener('submit', async function(event) {
        event.preventDefault();

        const title = document.getElementById('title').value;
        const description = document.getElementById('description').value;

        const authKeyResponse = await fetch('/generateAuthKey');
        const authKeyData = await authKeyResponse.json();
        const authKey = authKeyData.authKey;

        const payload = {
            title: title,
            description: description,
        };

        fetch('/feedback/submitFeedback', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'x-auth-key': authKey,
            },
            body: JSON.stringify(payload)
        })
            .then(response => {
                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }
                window.location.href = '/fb/submitFeedback';
            })
            .catch(error => {
                console.error('Error submitting feedback:', error);
            });
    });
</script>
</body>

</html>
